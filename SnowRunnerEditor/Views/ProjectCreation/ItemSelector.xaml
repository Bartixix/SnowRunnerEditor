<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="SnowRunnerEditor.Views.ProjectCreation.ItemSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SnowRunnerEditor.Views.ProjectCreation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Stretch">        
        <TextBlock Name="Lbl" Text="{x:Bind Label}" Margin="5"/>
        <Grid HorizontalAlignment="Stretch" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <local:ErrorTextBox Grid.Column="0" x:Name="TxtBox"/>
            <Button Grid.Column="2" x:Name="Btn" Content="{x:Bind Text}" Click="Select"/>
        </Grid>
    </StackPanel>
</UserControl>
